
<div class="row">
    <div class="large-12 columns">
        <h1>Sign Up</h1>
    </div>
</div>

<div class="row">
    <div class="large-12 columns">
        <!-- show any messages from flash-message -->
        <% if (message.length > 0) { %>
            <div data-alert class="alert-box alert radius">
              <%= message %>
            </div>
        <% } %>

        <!-- Sign Up FORM -->
        <form action="/signup" method="post">
            <div class="form-group">
                <label>Username</label>
                <input type="text" class="form-control" name="username">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password">
            </div>
            <div class="form-group">
                <label>Confirm Password</label>
                <input type="password" class="form-control" name="confirm_password">
            </div>

            <button type="submit" class="btn btn-lg">Signup</button>
        </form>

        <!-- If User already have an account -->
        <hr><p>Already have an account? <a href="#login">Login</a></p>
        <p>Forgot your password? <a href="#forgot">Reset my password</a></p>
    </div>
</div>

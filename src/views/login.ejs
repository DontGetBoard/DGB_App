
<div class="row">
    <div class="large-12 columns">
        <h1>Login</h1>
    </div>
</div>

<div class="row">
    <div class="large-12 columns">
        <!-- show any messages from flash-message -->
        <% if (message.length > 0) { %>
            <div data-alert class="alert-box alert radius">
              <%= message %>
            </div>
        <% } %>

        <!-- LOGIN FORM -->
        <form action="/login" method="post">

            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="email">
            </div>

            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password">
            </div>

            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password_confirm">
            </div>

            <button type="submit" class="btn btn-lg">Login</button>

        </form>

        <!-- If User needs an account -->
        <hr><p>Need an account? <a href="#signup">Signup</a></p>
        <p>Forgot your password? <a href="#forgot">Reset my password</a></p>

    </div>
</div>
